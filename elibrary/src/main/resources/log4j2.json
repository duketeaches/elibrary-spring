{
	"configuration": {
		"name": "Default",
		"appenders": {
			"Console": {
				"name": "Console-Appender",
				"target": "SYSTEM_OUT",
				"PatternLayout": {
					"pattern": "[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n"
				}
			},
			"RollingFile": {
				"name": "File",
				"fileName": "/opt/logs/elibrary-spring.log",
				"filePattern": "/opt/logs/elibrary-spring.log-%d{MM-dd-yy-HH-mm-ss}-%i.log",
				"PatternLayout": {
					"pattern": "%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n"
				},
				"Policies": {
					"SizeBasedTriggeringPolicy": {
						"size": "1 MB"
					}
				},
				"DefaultRolloverStrategy": {
					"max": "10"
				}
			}
		},
		"loggers": {
			"root": {
				"level": "debug",
				"appender-ref": [
					{
						"ref": "File",
						"level": "info"
					},
					{
						"ref": "Console-Appender",
						"level": "info"
					}
				]
			},
			"logger": [
				{
					"name": "org.hibernate.engine.internal.StatisticalLoggingSessionEventListener",
					"level": "fatal"
				}
			]
		}
	}
}